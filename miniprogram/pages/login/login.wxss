.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #d43c33 0%, #8b0000 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.privacy-agreement {
  margin-bottom: 40rpx;
}

.privacy-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.privacy-label checkbox {
  margin-right: 10rpx;
}

.link {
  color: #d43c33;
  text-decoration: underline;
  margin-left: 8rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #d43c33;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border: none;
}

.wx-login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  border: none;
}

.security-notice {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.notice-text {
  flex: 1;
  font-size: 22rpx;
  color: #666666;
  line-height: 1.6;
}

.privacy-content {
  padding: 20rpx;
  font-size: 26rpx;
  line-height: 1.8;
  color: #333333;
  white-space: pre-line;
}
